<Window x:Class="WpfApp3.View.Windows.ProfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3.View.Windows"
        mc:Ignorable="d"
        Title="ProfWindow" MaxHeight="450" MaxWidth="800" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="18" Text="Добро пожаловать:    "/>
                <TextBlock FontSize="18" Text="{Binding Login}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 300 0 0">
                <Button Content="Назад" Click="Button_Click" Height="40" Width="140" FontSize="20"/>
                <Button Content="Выход" Click="Button_Click_1" Height="40" Width="140" FontSize="20" Margin="195 0 0 0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
